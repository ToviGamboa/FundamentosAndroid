<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTextActionBar</item>
        <item name="android:textSize">@dimen/text_size_title_actionbar</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="TextDesing">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="ButtonDesing">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/txt_entrar</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/efecto_btn</item>
        <item name="android:textColor">@drawable/text_selector</item>
        <item name="android:textSize">@dimen/text_secundario</item>
        <item name="android:padding">@dimen/padding_btn</item>
    </style>
</resources>