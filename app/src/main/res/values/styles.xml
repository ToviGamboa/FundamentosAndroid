<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/text_size_title_actionbar</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="TextDesing">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>